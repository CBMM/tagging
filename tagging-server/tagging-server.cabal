  hs-source-dirs:     src
  exposed-modules:    APIDocs
                    , Server.Site
                    , Server.Application
                    , Server.Crud
                    , Server.Database
                    , Server.GroundhogAuth
                    , Server.Researcher
                    , Server.Resources
                    , Server.Session
                    , Server.Utils
                    , Server.Subject

  build-depends:      base >=4.8 && <4.9
                    , aeson >= 0.8 && < 0.10
                    , bytestring >=0.10 && <0.11
                    , clientsession
                    , containers >= 0.5 && < 0.6
                    , configurator
                    , errors >= 2.0 && < 2.2
                    , filepath
                    , groundhog >= 0.7 && < 0.7.0.4
                    , groundhog-th >= 0.7.1.0 && < 0.8
                    , groundhog-postgresql
                    , heist
                    , http-types
                    , http-streams >= 0.8.3.3 && < 0.9
                    , io-streams
                    , lens >= 4.11 && < 4.14
                    , map-syntax >= 0.2 && < 0.3
                    , MonadCatchIO-transformers
                    , monad-control
                    , monad-logger
                    , mtl >= 2.2 && < 2.3
                    , random
                    , readable
                    , resource-pool
--                     , postgresql-simple
                    , servant >= 0.5 && < 0.8
                    , servant-docs >= 0.5 && < 0.8
                    , servant-snap >= 0.5 && < 0.8
                    , SHA
                    , snap >= 1.0 && < 1.1
                    , snap-core >= 1.0 && < 1.1
                    , snap-server >= 1.0 && < 1.1
                    , snap-loader-dynamic
                    , snap-loader-static
                    , snaplet-postgresql-simple >= 1.0 && < 1.1
                    , tagging-common
                    , text >= 1.2 && < 1.3
                    , time >= 1.5 && < 1.6
                    , transformers
                    , uri-bytestring
                    , uuid
                    , unordered-containers >= 0.2 && < 0.3
                    , vector

